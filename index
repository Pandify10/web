    <script>
      if (typeof(Msg) == "object" && Msg.categories) {
        for (category in Msg.categories) {
          elements = document.getElementsByName(category);
          if (elements.length == 0) {
            continue;
          }
          elements[0].setAttribute("name", Msg.categories[category]);
        }
      }
    </script>

